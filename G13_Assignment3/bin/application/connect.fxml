         <image>
            <Image url="@../../../connection.jpg" />
         </image>
         <effect>
            <ColorAdjust brightness="0.17" contrast="-0.19" hue="-0.02" />
         </effect>
      </ImageView>
      <Button layoutX="31.0" layoutY="166.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="295.0" text=" connect as server">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="18.0" />
